  fileSystems."/mnt/nix" =
    { device = "/dev/disk/by-uuid/2a8f0a53-152a-4dc2-bc75-be4ec2dce355";
      fsType = "btrfs";
      options = [ "subvol=nix" ];
    };

  fileSystems."/mnt/persist" =
    { device = "/dev/disk/by-uuid/2a8f0a53-152a-4dc2-bc75-be4ec2dce355";
      fsType = "btrfs";
      options = [ "subvol=persist" ];
    };

