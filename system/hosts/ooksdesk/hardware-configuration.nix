    { device = "/dev/disk/by-uuid/2a8f0a53-152a-4dc2-bc75-be4ec2dce355";
      fsType = "btrfs";
      options = [ "subvol=swap" ];
    };

  fileSystems."/mnt/boot" =
    { device = "/dev/disk/by-uuid/D6A9-A9F3";
      fsType = "vfat";
    };

  swapDevices = [ ];

